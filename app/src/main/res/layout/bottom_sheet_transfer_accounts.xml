<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/bg_bottom_sheet"
    android:backgroundTint="@color/tinted_primary"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/screen_margin"
    android:paddingTop="10dp"
    android:paddingBottom="30dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="@string/title_transfer_accounts"
        android:textColor="?android:textColorPrimary"
        android:textSize="30sp"
        app:drawableTint="?colorPrimary"
        app:drawableTopCompat="@drawable/ic_transfer" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:paddingHorizontal="10dp"
        android:text="@string/msg_transfer_accounts"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_import_accounts"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:paddingVertical="13dp"
            android:text="@string/label_import_accounts" />

        <Button
            android:id="@+id/btn_export_accounts"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingVertical="13dp"
            android:text="@string/label_export_accounts" />
    </LinearLayout>
</LinearLayout>