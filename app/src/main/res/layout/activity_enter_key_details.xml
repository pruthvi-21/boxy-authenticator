<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.EnterKeyDetailsActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="12dp"
        android:background="?colorSurface"
        app:navigationIcon="@drawable/ic_chevron_left"
        app:title="@string/title_enter_account_details"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Title">

        <Button
            android:id="@+id/details_save_btn"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="0dp"
            android:text="@string/label_save_btn" />
    </com.google.android.material.appbar.MaterialToolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/screen_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:visibility="gone"
                app:cardBackgroundColor="?colorSurfaceVariant"
                app:cardCornerRadius="50dp"
                app:strokeWidth="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_dialog_alert" />
            </com.google.android.material.card.MaterialCardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/screen_margin">

                <com.ps.tokky.views.EditField
                    android:id="@+id/issuer_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:hint="@string/label_issuer"
                    app:icon="@drawable/ic_issuer"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.ps.tokky.views.EditField
                    android:id="@+id/label_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:hint="@string/label_label"
                    app:icon="@drawable/ic_label"
                    app:layout_constraintTop_toBottomOf="@id/issuer_field" />

                <com.ps.tokky.views.EditField
                    android:id="@+id/secret_key_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:hint="@string/label_secret_key"
                    app:icon="@drawable/ic_secret_key"
                    app:layout_constraintTop_toBottomOf="@id/label_field" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/adv_layout_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableEnd="@drawable/ic_chevron_down"
                android:drawablePadding="5dp"
                android:drawableTint="?colorOnSurface"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/label_view_advanced_options"
                android:textColor="?colorOnSurface"
                android:textSize="12sp" />

            <include
                android:id="@+id/adv_layout"
                layout="@layout/content_enter_key_details_adv_layout" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>