<resources>

    <style name="BaseTheme" parent="Theme.Tokky" />

    <style name="Theme.Tokky" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">?colorSurface</item>
        <item name="android:windowLightStatusBar">?isLightTheme</item>

        <item name="buttonGroupButtonStyle">@style/ButtonGroupButtonStyle</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
    </style>

    <style name="Theme.Tokky.Overlay" parent="ThemeOverlay.Material3.DynamicColors.DayNight">
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorSurfaceVariant">@color/surface_color_variant</item>
        <item name="android:colorBackground">@color/surface_color</item>
    </style>

    <style name="ButtonGroupButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/btn_grp_text_btn_text_color_selector</item>
        <item name="backgroundTint">@color/btn_grp_text_btn_bg_selector</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">?colorSurfaceVariant</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="AuthEntryCardStyle" parent="Widget.Material3.CardView.Filled">
        <item name="contentPadding">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">?colorSurfaceVariant</item>
        <item name="cardCornerRadius">0dp</item>
    </style>

</resources>